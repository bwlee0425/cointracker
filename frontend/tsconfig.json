{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "lib": [
            "esnext",
            "dom"
        ],
        "moduleResolution": "node",
        "allowJs": true,
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}